{
  "compilerOptions": {
    "noImplicitAny": false,                   // Disables implicit any
    "composite": true,                        // Enables project references
    "declaration": true,                      // Generates .d.ts files
    "declarationMap": true,                   // Generates source maps for declarations
    "sourceMap": true,                        // Generates source maps
    "incremental": true,                      // Enables incremental compilation
    "skipLibCheck": true,                     // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in imports
    "noEmit": true,                           // Prevents emitting output files from the root
    "esModuleInterop": true,                  // Enables interoperability between CommonJS and ES Modules
    "moduleResolution": "node",               // Uses Node.js module resolution strategy
    "target": "ES2020",                       // Sets the JavaScript language version for emitted JavaScript
    "lib": ["ES2020", "DOM"],                 // Specifies library files to be included in the compilation
    "strict": true,                           // Enables all strict type-checking options
    "baseUrl": ".",                           // Base directory for resolving non-relative module names
    "paths": {
      "@app/*": ["./src/app/*"],              // Example path mapping for frontend app
      "@server/*": ["./src/server/*"],        // Example path mapping for backend server
      "@common/*": ["./src/common/*"]         // Example path mapping for shared code
    }
  },
  "files": [],
  "include": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
